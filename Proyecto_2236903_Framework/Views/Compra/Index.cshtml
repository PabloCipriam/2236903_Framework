@model IEnumerable<Proyecto_2236903_Framework.Models.compra>

@{
    ViewBag.Title = "Compra";
}

<h2>Compras</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Total
        </th>
        <th>
            Usuario
        </th>
        <th>
            Cliente
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
        <td>
            @Proyecto_2236903_Framework.Controllers.CompraController.NombreUsuario(item.id_usuario)
        </td>
        <td>
            @Proyecto_2236903_Framework.Controllers.CompraController.NombreCliente(item.id_cliente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id }, new { @class = "LinkDelete" })
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".LinkDelete").click(function (event) {
            if (!confirm('¿Está seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
    }