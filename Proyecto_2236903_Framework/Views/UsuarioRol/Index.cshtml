@model IEnumerable<Proyecto_2236903_Framework.Models.usuariorol>

@{
    ViewBag.Title = "Usuario_rol";
}

<h2>Usuario Rol</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Proyecto_2236903_Framework.Controllers.UsuarioRolController.NombreUsuario(item.idUsuario)
        </td>
        <td>
            @Proyecto_2236903_Framework.Controllers.UsuarioRolController.DescripcionRol(item.idRol)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id }, new { @class = "linkDelete" })
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Está seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
    }