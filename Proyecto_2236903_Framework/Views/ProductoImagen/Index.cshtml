@model IEnumerable<Proyecto_2236903_Framework.Models.producto_imagen>

@{
    ViewBag.Title = "Producto_Imagen";
}

<h2>Producto Imagen</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Imagen
        </th>
        <th>
            Producto
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.imagen)
        </td>
        <td>
            @Proyecto_2236903_Framework.Controllers.ProductoImagenController.NombreProducto(item.id_producto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id }, new { @class = "linkDelete" })
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Está seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
    }